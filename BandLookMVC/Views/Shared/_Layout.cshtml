        <div class="footer-main">
            <div class="footer-logo">
                <div class="logo-footer">
                    <img src="assets/images/fl1.png" alt="">
                </div>
                <p class="des-footer">
                    Contact Information
                </p>
                <ul class="footer-info">
                    <li class="flex-three">
                        <i class="fas fa-envelope"></i>
                        <p>nguyenvu@gmail.com</p>
                    </li>
                    <li class="flex-three">
                        <i class="fas fa-phone"></i>
                        <p>
                            <a href="tel:0987654321">0987654321</a>
                        </p>
                    </li>
                    <li class="flex-three">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>487 Minh Khai - Hai Bà Trưng - Hà Nội</p>
                    </li>
                </ul>

            </div>
            <div class="footer-newsletter">
                <h5 class="title">Sign up to receive information</h5>
                <form action="/" id="footer-form">
                    <div class="input-wrap flex-three">
                        <input type="email" placeholder="Enter Email Address">
