@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <section class="breadcumb-section">
        <div class="tf-container">
            <div class="row">
                <div class="col-lg-12 center z-index1">
                    <h1 class="title">Register</h1>
                    <ul class="breadcumb-list flex-five">
                        <li>
                            <a href="/Home">Home</a>
                        </li>
                        <li>
                            <span>Register</span>
                        </li>
                    </ul>
                    <img class="bcrumb-ab" src="assets/images/page/mask-bcrumb.png" alt="">
                </div>
            </div>

        </div>
    </section>

    <section class="login">
        <div class="tf-container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-wrap flex">
                        <div class="image">
                            <img src="../assets/images/page/sign-up.jpg" alt="image">
                        </div>
                        <div class="content">
                            <div class="inner-header-login">
                                <h3 class="title">Register </h3>
                            </div>
                            <form asp-action="Register" method="post" class="login-user">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-wrap">
                                            <label>Email</label>
                                            <input type="email" name="Email" placeholder="Enter your email*" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-wrap">
                                            <label>Name</label>
                                            <input type="text" name="Username" placeholder="Enter your name*" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="input-wrap">
                                            <div class="flex-two">
                                                <label>Password</label>
                                            </div>
                                            <input type="password" name="Password" placeholder="Enter your password*" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mb-30">
                                        <button type="submit" class="btn-submit">Register</button>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="flex-three">
                                            <span class="account">Already have account?</span>
                                            <a href="/Auth/Login" class="link-login">Login</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>