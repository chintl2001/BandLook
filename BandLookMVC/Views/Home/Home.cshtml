<!-- Widget Tourpackage -->
<section class="tour-package pd-main">
<div class="tf-container w-1456">
<div class="row">
<div class="col-lg-12">
<div class="center m0-auto w-text-heading">
    <span class="sub-title-heading text-main mb-15 fadeInUp wow">
        PROFESSIONALS 
    </span>
    <h2 class="title-heading mb-40 fadeInUp wow">
        SPECIALIZING IN
        <span
            class="text-gray font-yes">
            KOL
        </span>BOOKING
    </h2>
</div>
<div class="tab-tour-list">
<div class="tab-content" id="myTabContent">
<div class="tab-pane fade show active" id="new-york-tab-pane" role="tabpanel"
     aria-labelledby="new-york-tab" tabindex="0">
<div class="row">
  @for (int i = 0; i < list4Artists.Count; i++)
  {

      <div class="col-sm-6 col-lg-3">
          <div class="tour-listing wow fadeInUp animated "
               data-wow-delay="0.1s">
              <a href="@Url.Action("Detail", "Artist", new { id = list4Artists[i].Id })" class="tour-listing-image">
                  <div class="badge-top flex-two">
                      <span class="feature">Outstanding</span>

                  </div>
                  <img src="@list4Artists[i].Image" style="height: 24rem; object-fit: cover;"
                       alt="Image Listing">

              </a>
              <div class="tour-listing-content">
                  <span class="tag-listing">Highly rated</span>
                  <span class="map">
                      @list4Artists[i].Job
                  </span>
                  <h3 class="title-tour-list">
                      <a href="@Url.Action("Detail", "Artist", new { id = list4Artists[i].Id })">
                          @list4Artists[i].Fullname
                      </a>
                      
                      <span> - @list4Artists[i].Rating stars</span>
                  </h3>
          
                  <div class="flex-two">
                      <div class="price-box flex-three">
                          <p> <span class="price-sale">VND @list4Artists[i].Catxe</span></p>
                      </div>

                  </div>
              </div>
          </div>
      </div>
  }
</div>
<div class="row wow fadeInUp">
    <div class="col-lg-12 center mt-44">
        <a href="/Artist/List" class="btn-main">
            <p class="btn-main-text">See All</p>
            <p class="iconer">
                <i class="icon-13"></i>
            </p>
