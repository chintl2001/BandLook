<!-- Widget destination -->
<section class="widget-destination">
    <div class="tf-container">
        <div class="row">
            <div class="col-lg-12">
                <div class="center m0-auto w-text-heading mb-40">
                    <span class="sub-title-heading text-main mb-15 fadeInUp wow">
                        Explore featured services

                    </span>
                    <h2 class="title-heading fadeInUp wow">Our story</h2>
                </div>
            </div>
        </div>
        <div class="grid-three-destination">
             @for (int i = 0; i < listProduct.Count; i++)
             {
                 <div class="tf-widget-destination wow fadeInUp animated " data-wow-delay="0.1s">
                     <a href="single-destination.html" class="destination-imgae">
                         <span class="tour">Outstanding</span>
                         <img src="@listProduct[i].Image" alt="" style="height: 27rem; object-fit: cover;">
                     </a>
                     <div class="destination-content">
                         <span class="nation">@listProduct[i].Name</span>
                     </div>
                 </div>
             }

        </div>
    </div>
</section>
<!-- Widget Banner Blog -->
<section class="pd-main">
    <div class="tf-container">
        <div class="row">
            <div class="col-lg-12">
                <div class="center m0-auto w-text-heading">
                    <span class="sub-title-heading text-main mb-15 wow fadeInUp animated">
                        Explore

                    </span>
                    <h2 class="title-heading mb-40 wow fadeInUp animated">
                         Featured Artists
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            @for (int i = 0; i < list3Artists.Count; i++)
            {
                <div class="col-md-4 wow fadeInUp animated " data-wow-delay="0.2s">
                    <div class="tf-widget-blog blog-style">
                        <a href="@Url.Action("Detail", "Artist", new { id = list3Artists[i].Id })" class="blog-image">
                            <img src="@list3Artists[i].Image" style="height: 25rem; object-fit: cover;" alt="">
                            <div class="category-blog">
                                <span>@list3Artists[i].Job</span>
                            </div>
                        </a>
                        <div class="blog-content">
                            <ul class="meta-list flex-three">
                                <li>
                                    <a href="@Url.Action("Detail", "Artist", new { id = list3Artists[i].Id })">
                                        <span>@list3Artists[i].Dob</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Detail", "Artist", new { id = list3Artists[i].Id })">
                                        <span>@list3Artists[i].Rating sao</span>
                                    </a>
                                </li>
                            </ul>
                            <h3 class="entry-title">
                                <a href="@Url.Action("Detail", "Artist", new { id = list3Artists[i].Id })">
                                    @list3Artists[i].Fullname
                                </a>
                            </h3>
                            <p class="des">
                                @list3Artists[i].Phone - @list3Artists[i].Address
                            </p>
                            <a href="@Url.Action("Detail", "Artist", new { id = list3Artists[i].Id })" class="btn-read-more">
                                View more
                              
                            </a>
                        </div>
                    </div>
                </div>
            }
           
            
        </div>

    </div>
</section>
